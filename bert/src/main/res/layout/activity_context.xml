<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/xml_toolbar"
        layout="@layout/toolbar"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="126dp">
    </include>

    <EditText
        android:id="@+id/contextText"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="204dp"
        android:ems="10"
        android:hint="Context"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Your other layout components -->

        <Button
            android:id="@+id/nextStepButton"
            style="@style/Widget.Material3.Button.OutlinedButton.Icon"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/material_dynamic_primary70"
            android:clickable="true"
            android:text="Start"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            android:textSize="12sp"
            android:textColor="@color/secondaryTextColor" />
    </RelativeLayout>

    <Spinner
        android:id="@+id/spinnerDLC"
        android:layout_width="273dp"
        android:layout_height="54dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="72dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/model_info"
        android:layout_width="273dp"
        android:layout_height="54dp"
        android:padding="16dp"
        android:gravity="center"
        android:text="Model Information"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerDLC"/>
</androidx.constraintlayout.widget.ConstraintLayout>